{
  "name": "vocabulazy-web",
  "version": "1.0.0",
  "description": "A most useful app for learning English vocabulary in the world!",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "repository": "git@github.com:miZyind/vocabulazy-web.git",
  "homepage": "https://vocabulazy.io",
  "bugs": "https://github.com/miZyind/vocabulazy-web/issues",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint \"*/**/*.{ts,tsx}\" --max-warnings 0"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.42.0",
    "next": "^11.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/styled-components": "^5.1.9",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint-plugin-mizyind": "^2.2.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.2.0",
    "lint-staged": "^10.5.4",
    "typescript": "^4.2.3",
    "typescript-styled-plugin": "^0.15.0"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "babel-plugin-styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:mizyind/react"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings 0"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
